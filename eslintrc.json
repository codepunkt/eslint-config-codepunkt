{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "jest"
  ],
  "env": {
    "jest/globals": true
  },
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "array-bracket-spacing": [
      2,
      "always",
      {
        "arraysInArrays": false,
        "objectsInArrays": false
      }
    ],
    "object-curly-spacing": [
      2,
      "always",
      {
        "arraysInObjects": false,
        "objectsInObjects": false
      }
    ],
    "standard/array-bracket-even-spacing": [ 0 ],
    "standard/object-curly-even-spacing": [ 0 ]
  }
}
